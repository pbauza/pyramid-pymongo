{% extends "base.jinja2" %}
{% block content %}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h3 class="mb-0">
    {% if is_admin %}
      All Submissions (Admin)
    {% else %}
      Your Submissions
    {% endif %}
  </h3>
  <a href="{{ request.route_path('home') }}" class="btn btn-primary">➕ New submission</a>
</div>

<p><strong>User:</strong> {{ niu }}{% if is_admin %} <span class="badge bg-success">Admin</span>{% endif %}</p>

<a href="{{ request.route_path('export_csv') }}" class="btn btn-success">
    ⬇️ Export CSV
</a>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-striped table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>Experiment</th>
            <th>NIU</th>
            <th>Name</th>
            <th>Result</th>
            <th>Uncertainty</th>
            <th>Rectifications</th>
            <th>Updated</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        {% for d in docs %}
          <tr>
            <td>{{ d.experiment_id }}</td>
            <td>{{ d.niu }}</td>
            <td>{{ d.first_name }} {{ d.last_name }}</td>
            <td>{{ d.result }}</td>
            <td>{{ d.uncertainty }}</td>
            <td>{{ d.rectifications }}</td>
            <td>{{ d.updated_at.strftime("%Y-%m-%d %H:%M:%S") if d.updated_at else "" }}</td>
            <td><a href="{{ request.route_path('edit', _id=d.id) }}" class="btn btn-sm btn-outline-primary">Edit</a></td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
