{% extends "base.jinja2" %}
{% block content %}
<h2>Submissions</h2>

<table>
  <thead>
    <tr>
      <th>Experiment</th>
      <th>NIU</th>
      <th>Name</th>
      <th>Result</th>
      <th>Uncertainty</th>
      <th>Rectifications</th>
      <th>Updated</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {% for d in docs %}
    <tr>
      <td>{{ d.experiment_id }}</td>
      <td>{{ d.niu }}</td>
      <td>{{ d.first_name }} {{ d.last_name }}</td>
      <td>{{ d.result }}</td>
      <td>{{ d.uncertainty }}</td>
      <td>{{ d.rectifications }}</td>
      <td>{{ d.updated_at.strftime("%Y-%m-%d %H:%M:%S") if d.updated_at else "" }}</td>
      <td><a href="{{ request.route_url('edit', _id=d.id) }}">Edit</a></td>
    </tr>
  {% endfor %}
  </tbody>
</table>
{% endblock %}
