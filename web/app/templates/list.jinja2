{% extends "base.jinja2" %}
{% block content %}
<h2>
  {% if is_admin %}
    All Submissions (Admin)
  {% else %}
    Your Submissions
  {% endif %}
</h2>

<p><strong>User:</strong> {{ niu }}{% if is_admin %} <span style="color:green;">(admin)</span>{% endif %}</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Experiment</th>
      <th>NIU</th>
      <th>Name</th>
      <th>Result</th>
      <th>Uncertainty</th>
      <th>Rectifications</th>
      <th>Updated</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {% for d in docs %}
    <tr>
      <td>{{ d.experiment_id }}</td>
      <td>{{ d.niu }}</td>
      <td>{{ d.first_name }} {{ d.last_name }}</td>
      <td>{{ d.result }}</td>
      <td>{{ d.uncertainty }}</td>
      <td>{{ d.rectifications }}</td>
      <td>{{ d.updated_at.strftime("%Y-%m-%d %H:%M:%S") if d.updated_at else "" }}</td>
      <td><a href="{{ request.route_url('edit', _id=d.id) }}">Edit</a></td>
    </tr>
  {% endfor %}
  </tbody>
</table>

{% if is_admin %}
  <p><a href="{{ request.route_url('home') }}" class="btn btn-primary">âž• Add New</a></p>
{% endif %}
{% endblock %}
