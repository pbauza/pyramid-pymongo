{% extends "base.jinja2" %}
{% block content %}
<div class="card shadow-sm">
  <div class="card-body">
    <h3 class="mb-3">New submission</h3>

  {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      ‚úÖ {{ success }}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  {% elif error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      ‚ö†Ô∏è {{ error }}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  {% endif %}

    <p><strong>Authenticated User:</strong> {{ niu or "Unknown" }}</p>

    <form method="post" class="needs-validation" novalidate>
      <div class="row mb-3">
        <div class="col-md-6">
          <label for="experiment_id" class="form-label">Experiment identifier *</label>
          <input
            id="experiment_id"
            name="experiment_id"
            type="text"
            class="form-control"
            required
            value="{{ values.get('experiment_id','') }}"
          />
        </div>
        <div class="col-md-6">
          <label for="niu" class="form-label">NIU *</label>
          <input
            id="niu"
            name="niu"
            type="text"
            class="form-control"
            readonly
            value="{{ niu }}"
          />
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <label for="first_name" class="form-label">First name *</label>
          <input
            id="first_name"
            name="first_name"
            type="text"
            class="form-control"
            required
            value="{{ values.get('first_name','') }}"
          />
        </div>
        <div class="col-md-6">
          <label for="last_name" class="form-label">Last name *</label>
          <input
            id="last_name"
            name="last_name"
            type="text"
            class="form-control"
            required
            value="{{ values.get('last_name','') }}"
          />
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <label for="result" class="form-label">Result *</label>
          <input
            id="result"
            name="result"
            type="number"
            step="any"
            class="form-control"
            required
            value="{{ values.get('result','') }}"
          />
        </div>
        <div class="col-md-6">
          <label for="uncertainty" class="form-label">Uncertainty *</label>
          <input
            id="uncertainty"
            name="uncertainty"
            type="number"
            step="any"
            class="form-control"
            required
            value="{{ values.get('uncertainty','') }}"
          />
        </div>
      </div>

      <div class="mb-3">
        <label for="comments" class="form-label">Comments (optional)</label>
        <textarea
          id="comments"
          name="comments"
          class="form-control"
          rows="3"
        >{{ values.get('comments','') }}</textarea>
      </div>

      <button class="btn btn-primary px-4" type="submit">üíæ Save</button>
      <p class="text-muted mt-3 small">* Required</p>
    </form>
  </div>
</div>
{% endblock %}
