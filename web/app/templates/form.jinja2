{% extends "base.jinja2" %}
{% block content %}
<h2>New submission</h2>

{% if error %}<div class="error">{{ error }}</div>{% endif %}

<p><strong>Usuario autenticado:</strong> {{ niu or "Desconocido" }}</p>

<form method="post">
  <div class="row">
    <div>
      <label for="experiment_id">Experiment identifier *</label>
      <input id="experiment_id" name="experiment_id" required
             value="{{ values.get('experiment_id','') }}" />
    </div>
    <div>
      <label for="niu">NIU *</label>
      <input id="niu" name="niu" readonly value="{{ niu }}" />
    </div>
  </div>

  <div class="row">
    <div>
      <label for="first_name">First name *</label>
      <input id="first_name" name="first_name" required
             value="{{ values.get('first_name','') }}" />
    </div>
    <div>
      <label for="last_name">Last name *</label>
      <input id="last_name" name="last_name" required
             value="{{ values.get('last_name','') }}" />
    </div>
  </div>

  <div class="row">
    <div>
      <label for="result">Result *</label>
      <input id="result" name="result" required type="number" step="any"
             value="{{ values.get('result','') }}" />
    </div>
    <div>
      <label for="uncertainty">Uncertainty *</label>
      <input id="uncertainty" name="uncertainty" required type="number" step="any"
             value="{{ values.get('uncertainty','') }}" />
    </div>
  </div>

  <div>
    <label for="comments">Comments (optional)</label>
    <textarea id="comments" name="comments" rows="3">{{ values.get('comments','') }}</textarea>
  </div>

  <div class="actions">
    <button class="btn" type="submit">Save</button>
  </div>

  <p><small class="mono">* Required</small></p>
</form>
{% endblock %}
